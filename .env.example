# Server Configuration
PORT=8000
NODE_ENV=development

# Security
ALLOWED_ORIGINS=*

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_MAX=100

# Clip Settings
DEFAULT_EXPIRATION_MINUTES=60
MAX_EXPIRATION_MINUTES=10080
MAX_CONTENT_SIZE=100000

# Redis Configuration (Optional - will use memory-only if not provided)
# For free Upstash Redis: https://upstash.com/
# REDIS_URL=redis://localhost:6379
# UPSTASH_REDIS_URL=rediss://your-upstash-url

# Optional: Add your custom configurations here
# JWT_SECRET=your-secret-key
